# Copy to .env and customize

# REQUIRED: Change this to a random string (run: openssl rand -hex 32)
SECRET_KEY=change-me-use-openssl-rand-hex-32

# Default admin credentials (change after first login)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# JWT expiration in minutes (default: 480 = 8 hours)
JWT_EXPIRE_MINUTES=480

# Database URL (default: SQLite)
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@host:5432/vanlist
DATABASE_URL=sqlite:///data/vanlist.db
